<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:background="@drawable/outline_green"
    tools:context=".ui.DetailsActivity">

    <ImageView
        android:id="@+id/iv_character_portrait"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/name"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_character_portrait"
        />

    <TextView
        android:id="@+id/tv_input_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_name"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_aka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/aka"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/iv_character_portrait"
        app:layout_constraintTop_toBottomOf="@id/tv_input_name"/>

    <TextView
        android:id="@+id/tv_input_aka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@id/tv_aka"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_input_name"/>

    <TextView
        android:id="@+id/tv_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/birthday"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/iv_character_portrait"
        app:layout_constraintTop_toBottomOf="@id/tv_input_aka"/>

    <TextView
        android:id="@+id/tv_input_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@id/tv_birthday"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_input_aka"/>

    <TextView
        android:id="@+id/tv_occupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/occupation"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/iv_character_portrait"
        app:layout_constraintTop_toBottomOf="@id/tv_input_birthday"/>

    <TextView
        android:id="@+id/tv_input_occupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@id/tv_occupation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_input_birthday"/>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/status"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/iv_character_portrait"
        app:layout_constraintTop_toBottomOf="@id/tv_input_occupation"/>

    <TextView
        android:id="@+id/tv_input_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@id/tv_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_input_occupation"/>

    <TextView
        android:id="@+id/tv_appearances"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/appearances"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/iv_character_portrait"
        app:layout_constraintTop_toBottomOf="@id/tv_input_status"/>

    <TextView
        android:id="@+id/tv_input_appearances"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@id/tv_appearances"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_input_status"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/details_bg_ls"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>